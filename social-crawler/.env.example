# Social Crawler Configuration
# Copy this file to .env and fill in your API keys

# Backend API URL
BACKEND_API_URL=http://localhost:8000

# Twitter/X API (optional - uses mock data if not set)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# YouTube Data API (optional - uses mock data if not set)
YOUTUBE_API_KEY=

# Crawl interval in minutes
CRAWL_INTERVAL_MINUTES=3

# Minimum confidence score to submit alert (0.0 - 1.0)
MIN_CONFIDENCE_THRESHOLD=0.5
